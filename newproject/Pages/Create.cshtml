@page
@model newproject.Pages.CreateModel
@{
}
<style>
    .success{
        background-color:#8BFF63;
    }
</style>
<h1> Flight customers</h1>




@if (Model.errormessage.Length > 0)
{
    <div class=" alert alert-warning alert-dismissible fade show " role="alert">



        <strong> @Model.errormessage</strong>


        <button type="button" class=" btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

@if (Model.successmessage.Length > 0)
{
    <div class=" alert alert-success alert-dismissible fade show " role="alert">



        <strong> @Model.successmessage</strong>


        <button type="button" class=" btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="post">
<div class="container">

        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="ID" name="id" value="@Model.customerInfo.id">
        </div>
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Name" name="name" value="@Model.customerInfo.name">
    </div>
    <div class="mb-3">
        <label  class="form-label">Address</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Address" name="address" value="@Model.customerInfo.address">
    </div>
    <div class="mb-3">
        <label  class="form-label">Contact</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Contact" name="contact" value="@Model.customerInfo.contact">
    </div>
    <div class="mb-3">
        <label  class="form-label">Destination</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Destination"name="destination" value="@Model.customerInfo.destination">
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Submit</button>
    </div>

</div>
</form>